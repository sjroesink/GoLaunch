---
import ThemeToggle from "./ThemeToggle.astro";

const links = [
  { href: "#features", label: "Features" },
  { href: "#ai", label: "AI" },
  { href: "#cli", label: "CLI" },
  { href: "#download", label: "Download" },
];
---

<nav
  class="fixed top-0 left-0 right-0 z-50 border-b bg-launcher-bg/80 backdrop-blur-xl"
  style="border-color: var(--glass-border);"
>
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="#" class="flex items-center gap-2.5 group">
      <div
        class="flex h-8 w-8 items-center justify-center rounded-lg bg-launcher-accent/20 text-launcher-accent transition-colors group-hover:bg-launcher-accent/30"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="h-4.5 w-4.5"
        >
          <path
            d="M3.478 2.404a.75.75 0 0 0-.926.941l2.432 7.905H13.5a.75.75 0 0 1 0 1.5H4.984l-2.432 7.905a.75.75 0 0 0 .926.94 60.519 60.519 0 0 0 18.445-8.986.75.75 0 0 0 0-1.218A60.517 60.517 0 0 0 3.478 2.404Z"
          ></path>
        </svg>
      </div>
      <span class="text-lg font-bold" style="color: var(--heading-color);"
        >GoLaunch</span
      >
    </a>

    <!-- Links -->
    <div class="hidden items-center gap-8 md:flex">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="text-sm text-launcher-muted transition-colors hover:text-launcher-text"
          >
            {link.label}
          </a>
        ))
      }
    </div>

    <!-- Right side: theme toggle + GitHub -->
    <div class="flex items-center gap-3">
      <ThemeToggle />
      <a
        href="https://github.com/sjroesink/GoLaunch"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 rounded-lg px-4 py-2 text-sm text-launcher-muted transition-all hover:text-launcher-text"
        style="border: 1px solid var(--glass-border);"
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="h-4 w-4">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        GitHub
      </a>
    </div>
  </div>
</nav>
