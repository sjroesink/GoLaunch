---
interface Props {
  icon: string;
  title: string;
  description: string;
  delay?: string;
}

const { icon, title, description, delay = "0s" } = Astro.props;
---

<div
  class="glass-card p-6 transition-all duration-300 hover:bg-launcher-hover animate-slide-up"
  style={`animation-delay: ${delay}; opacity: 0;`}
>
  <div
    class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-launcher-accent/10 text-2xl"
  >
    <Fragment set:html={icon} />
  </div>
  <h3 class="mb-2 text-lg font-semibold" style="color: var(--heading-color);">{title}</h3>
  <p class="text-sm leading-relaxed text-launcher-muted">{description}</p>
</div>
